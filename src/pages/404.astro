import Layout from "../layouts/Layout.astro";
---

<Layout title="404">
  <div class="mt-32 px-10 md:px-0 md:w-1/2 mx-auto">
    <div class="flex justify-center">
      <span class="glitch" data-text="404">404</span>
    </div>

    <span class="mt-10 h-4 text-2xl text-center font-mono block" id="err-desc"
    ></span>
    <div class="mt-20 text-center">
      <a href="/" class="rounded-2xl px-5 py-2 border">Wróć do strony głównej</a
      >
    </div>
  </div>
</Layout>

<script>
  const errorDescription = "nothing's here.";
  const errorTypingSpeed = 50;

  const writeErrorDesc = (text: string, speed: number, i = 0) => {
    if (i < text.length) {
      console.log(text);
      document.querySelector("#err-desc").innerHTML += text.charAt(i);
      setTimeout(() => writeErrorDesc(text, speed, i + 1), speed);
    }
  };

  window.addEventListener("DOMContentLoaded", () =>
    writeErrorDesc(errorDescription, errorTypingSpeed),
  );
</script>
