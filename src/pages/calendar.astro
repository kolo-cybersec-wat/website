---
import { getCollection } from "astro:content";
import Layout from "../layouts/Layout.astro";
import Calendar from "../components/CalendarPage/Calendar.astro";

const meetings = await getCollection("meetings");
const calendarEvents = meetings.map((meeting) => ({
  title: meeting.data.title,
  start: meeting.data.dateStart,
  end: meeting.data.dateEnd,
}));
---

<Layout title="Terminarz">
  <div class="mt-32 px-10 md:px-0 md:w-1/2 mx-auto">
    <h1 class="text-4xl text-center">Terminarz</h1>
    <div class="mt-10">
      <Calendar calendarEvents={calendarEvents} />
    </div>
  </div>
</Layout>
